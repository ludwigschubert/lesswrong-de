!!!
%html
  %head
    %meta{charset: "utf-8"}
    %meta{content: "IE=edge,chrome=1", http: {equiv: "X-UA-Compatible"}}
    %meta{content: "width=device-width,initial-scale=1,maximum-scale=1", name: "viewport"}
    %title= current_page.data.title || "Proteus"
    = stylesheet_link_tag "application"
    = javascript_include_tag "//use.typekit.net/pex8wnm.js"
    :javascript
      try{Typekit.load();}catch(e){}

  %body{class: page_classes}
    = yield
    = javascript_include_tag "https://code.jquery.com/jquery-2.1.1.min.js", "application"

    %footer.footer
      .logo
      &copy;
      = link_to "LessWrong Deutschland e.V.", "//lesswrong.de"
      = Time.now.year

    = javascript_include_tag "https://code.jquery.com/jquery-2.1.1.min.js"
